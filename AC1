import java.text;
import java.util.Scanner;

public class AC1 {
    public static void main(String[] args) {
        Scanner scn = new Scanner(System.in);

// Classe Carro
public class Carro {
    // Atributos privados
    private String marca;
    private String modelo;
    private double precoBase;

    // Construtor padrão
    public Carro() {
        this.precoBase = 0.0;
    }

    // Construtor com parâmetros
    public Carro(String marca, String modelo, double precoBase) {
        this.marca = marca;
        this.modelo = modelo;
        this.precoBase = precoBase;
    }

    // Métodos getters e setters
    public String getMarca() {
        return marca;
    }

    public void setMarca(String marca) {
        this.marca = marca;
    }

    public String getModelo() {
        return modelo;
    }

    public void setModelo(String modelo) {
        this.modelo = modelo;
    }

    public double getPrecoBase() {
        return precoBase;
    }

    // Método para definir o preço base com valor padrão
    public void setPrecoBase() {
        this.precoBase = 100.0; // Valor padrão
    }

    // Método para definir o preço base com valor personalizado
    public void setPrecoBase(double precoBase) {
        this.precoBase = precoBase;
    }

    // Método para calcular o preço
    public double calcularPreco() {
        return precoBase;
    }
}

// Classe Caminhao
public class Caminhao {
    // Atributos privados
    private String marca;
    private String modelo;
    private double precoBase;

    // Construtor padrão
    public Caminhao() {
        this.precoBase = 0.0;
    }

    // Construtor com parâmetros
    public Caminhao(String marca, String modelo, double precoBase) {
        this.marca = marca;
        this.modelo = modelo;
        this.precoBase = precoBase;
    }

    // Métodos getters e setters
    public String getMarca() {
        return marca;
    }

    public void setMarca(String marca) {
        this.marca = marca;
    }

    public String getModelo() {
        return modelo;
    }

    public void setModelo(String modelo) {
        this.modelo = modelo;
    }

    public double getPrecoBase() {
        return precoBase;
    }

    // Método para definir o preço base com valor padrão
    public void setPrecoBase() {
        this.precoBase = 150.0; // Valor padrão
    }

    // Método para definir o preço base com valor personalizado
    public void setPrecoBase(double precoBase) {
        this.precoBase = precoBase;
    }

    // Método para calcular o preço ajustado com a taxa de carga
    public double calcularPreco(double taxaCarga) {
        return precoBase * (1 + taxaCarga / 100);
    }
}

// Classe Motocicleta
public class Motocicleta {
    // Atributos privados
    private String marca;
    private String modelo;
    private double precoBase;
    private double taxaSeguro;

    // Construtor padrão
    public Motocicleta() {
        this.precoBase = 0.0;
        this.taxaSeguro = 0.0;
    }

    // Construtor com parâmetros
    public Motocicleta(String marca, String modelo, double precoBase, double taxaSeguro) {
        this.marca = marca;
        this.modelo = modelo;
        this.precoBase = precoBase;
        this.taxaSeguro = taxaSeguro;
    }

    // Métodos getters e setters
    public String getMarca() {
        return marca;
    }

    public void setMarca(String marca) {
        this.marca = marca;
    }

    public String getModelo() {
        return modelo;
    }

    public void setModelo(String modelo) {
        this.modelo = modelo;
    }

    public double getPrecoBase() {
        return precoBase;
    }

    public void setPrecoBase(double precoBase) {
        this.precoBase = precoBase;
    }

    public double getTaxaSeguro() {
        return taxaSeguro;
    }

    public void setTaxaSeguro(double taxaSeguro) {
        this.taxaSeguro = taxaSeguro;
    }

    // Método para calcular o preço com a taxa de seguro
    public double calcularPreco() {
        return precoBase + taxaSeguro;
    }
}
